<%- include('./includes/header',{title:'Login' })%>
<%- include('./includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Criar conta ou entrar</p>

      <%- include('includes/messages') %>

      <div class="row my-3">
        <div class="col-lg">
          <h4>Crie sua conta</h4>
          <p>Se você ainda não tem conta preencha o formulário abaixo:</p>

          <form action="/login/register" method="POST">
            <div class="form-group my-3">
              <label for="exampleInputName1">Nome</label>
              <input type="text" class="form-control" name="name" />
            </div>
            <div class="form-group my-3">
              <label for="exampleInputName1">Sobrenome</label>
              <input type="text" class="form-control" name="surname" />
            </div>
            <div class="form-group my-3">
              <label for="exampleInputName1">Telefone</label>
              <input type="tel" class="form-control" name="phone" />
            </div>
            <div class="form-group my-3">
              <label for="exampleInputName1">Seu e-mail</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="form-group my-3">
              <label for="exampleInputPassword1">Password</label>
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                name="password"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              Criar minha conta
            </button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Entrar</h4>
          <p>Se você já possui uma conta faça login abaixo:</p>

          <form action="/login/login" method="POST">
            <div class="form-group my-3">
              <label for="exampleInputEmail1">Seu e-mail</label>
              <input
                type="email"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                name="email"
              />
            </div>
            <div class="form-group my-3">
              <label for="exampleInputPassword1">Password</label>
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                placeholder="Password"
                name="password"
              />
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./includes/footer')%>
